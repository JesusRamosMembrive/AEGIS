{
  "mcpServers": {
    "aegis-tools": {
      "command": "python",
      "args": [
        "-m",
        "code_map.mcp.tool_proxy_server",
        "--socket",
        "/tmp/aegis_tool_approval.sock"
      ],
      "env": {
        "AEGIS_TOOL_SOCKET": "/tmp/aegis_tool_approval.sock",
        "AEGIS_CWD": "${CWD}"
      }
    }
  }
}
